<?xml version="1.0" encoding="utf-8"?>
<odoo> 

     <data noupdate="1">
        <!--Email template -->
        <record id="student_card_email_template" model="mail.template">
            <field name="name">Student Card: Send by email</field>
            <field name="model_id" ref="openacademy.model_openacademy_student"/>
            <field name="email_from">${(object.name_seq.email_formatted |safe}</field>
            <field name="email_to">${object.student_email}</field>
            <field name="subject">Student Card (Ref ${object.name_seq})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.student_name}
                        <br /><br />
                        Here is your Student Card with reference ${object.name_seq}
                        <br /><br />
                        Age: ${object.student_age}
                        <br /><br />
                        Do not hesitate to contact us if you have any questions.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="report_student_card"/>
            <field name="report_name">Student Card_${(object.name_seq)}</field>
        </record>

         <record id="teacher_card_email_template" model="mail.template">
            <field name="name">Teacher Card: Send by email</field>
            <field name="model_id" ref="openacademy.model_openacademy_teacher"/>
            <field name="email_from">${(object.teacher_seq.email_formatted |safe}</field>
            <field name="email_to">${object.teacher_email}</field>
            <field name="subject">Teacher Card (Ref ${object.teacher_seq})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.teacher_name}
                        <br /><br />
                        Here is your Teacher Card with reference ${object.teacher_seq}
                        <br /><br />
                        Age: ${object.teacher_age}
                        <br /><br />
                        Do not hesitate to contact us if you have any questions.
                    </p>
                </div>
            </field>
            <field name="report_template" ref="report_teacher_card"/>
            <field name="report_name">Teacher Card_${(object.teacher_seq)}</field>
        </record>
    </data>
</odoo>