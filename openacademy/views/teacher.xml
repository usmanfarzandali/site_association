<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- kanban view of students -->
    <record id="student_kanban" model="ir.ui.view">
      <field name="name">openacademy.teacher.kanban</field>
      <field name="model">openacademy_teacher</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="teacher_seq"/>
          <field name="teacher_image"/>
          <field name="student_ids"/>
          <field name="teacher_age"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_openacademy_teacher_kanban">
                <!-- <t t-if="record.image.raw_value">
                  <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('openacademy_student', 'image', record.name_seq.raw_value)}')"/>
                </t> -->
                <t t-if="record.teacher_image.raw_value">
                  <!-- <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('openacademy_student', 'image', record.name_seq.raw_value)}')"/> -->
                  <img t-att-src="kanban_image('openacademy_teacher', 'teacher_image', record.teacher_seq.raw_value)"/>
                </t>
                <t t-else="">
                  <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"'/>
                </t>
                <div class="oe_kanban_details">
                  <strong class="o_kanban_record_title"><field name="display_name"/></strong>
                  <div class="o_kanban_tags_section"/>
                  <ul>
                    <li>Age : <field name="teacher_age"/></li>
                    <li>Students : <field name="student_ids"/></li>
                  </ul>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- tree view of teachers -->
    <record id="teacher_tree" model="ir.ui.view">
            <field name="name">openacademy_teacher.tree</field>
            <field name="model">openacademy_teacher</field>
            <field name="arch" type="xml">
                <tree string="Teachers">
                    <field name="teacher_seq"/>
                  <field name="teacher_name"/>
<!--                    for showing sum and avg in tree view-->
                  <field name="teacher_age" sum="Sum of all Ages"/>
                    <field name="teacher_dob"/>
                  <field name="teacher_gender"/>
                  <field name="teacher_qualification"/>
                  <field name="teacher_image"/>
                  <field name="student_ids"/>
                  <field name="course_ids"/>
                </tree>
            </field>
        </record>
    
    <!-- form view of teachers -->
    <record id="teachers_form" model="ir.ui.view">
            <field name="name">openacademy_teacher.form</field>
            <field name="model">openacademy_teacher</field>
            <field name="arch" type="xml">
                <form string="Teachers">
                <header>
                    <button id="button_sendbyemail" name="action_sendbyemail" string="Send By Email"
                        type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_teacher_courses"
                            type="object" class="oe_stat_button" icon="fa-usd">
                        <field name="course_count" string="Courses" widget="statinfo"/>
                        </button>
                    </div>
                     <div class="oe_title">
                    <h1>
                      <field name="teacher_seq" readonly="1"/>
                    </h1>
                     </div>
                    <group>
                      <group>
                        <field name="teacher_image" widget="image" class="oe_avatar"/>
                        <field name="teacher_name"/>
                        <field name="teacher_age"/>
                          <field name="teacher_dob"/>
                        <field name="course_ids" widget="many2many_tags"/>
                      </group>
                      <group>
                        <field name="teacher_gender"/>
                        <field name="teacher_qualification"/>
                        <field name="teacher_email"/>
                        <field name="student_ids" widget="many2many_tags"/>
                      </group>
                    </group>
                    <notebook>
                        <page string="Teacher Course">
                            <group>
                                <field name="teacher_note"/>
                           </group>
                        </page>
                        <page string="Teacher Notes">
                            <group>
                                <field name="teacher_description"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- div for chatter box -->
               <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>    
                </form>
            </field>
        </record>    

    <!-- action of teachers menu -->
    <record id="openacademyteacher_action_window" model="ir.actions.act_window">
      <field name="name">Openacademy Teacher</field>
      <!-- <field name="type">ir.actions.act_window</field> -->
      <field name="res_model">openacademy_teacher</field>
      <field name="view_mode">tree,form,kanban</field>
      <field name="help" type="html">
        <p>Create First Teacher!</p>
      </field>
    </record> 

    <!-- menuitem of teacher -->
    <menuitem id="openacademy_teacher" 
      name="Teacher" parent="openacademy_root"
      action="openacademyteacher_action_window"/>    


</odoo>